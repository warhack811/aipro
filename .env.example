# =============================================================================
# Mami AI - Ortam Degiskenleri Sablonu
# =============================================================================
# Bu dosyayi kopyalayip .env olarak kaydedin ve degerleri doldurun.
# Ornek: copy .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# GENEL UYGULAMA AYARLARI
# -----------------------------------------------------------------------------
APP_NAME=Mami AI
DEBUG=True

# Sunucu Ayarlari
API_HOST=0.0.0.0
API_PORT=8000

# Guvenlik - ONEMLI: Production'da mutlaka degistirin!
SECRET_KEY=super-secret-dev-key-change-this-in-production

# -----------------------------------------------------------------------------
# VERITABANI AYARLARI
# -----------------------------------------------------------------------------
DATABASE_URL=
CHROMA_PERSIST_DIR=data/chroma_db

# -----------------------------------------------------------------------------
# GROQ API AYARLARI (LLM)
# -----------------------------------------------------------------------------
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GROQ_API_KEY_BACKUP=
GROQ_API_KEY_3=
GROQ_API_KEY_4=

GROQ_DECIDER_MODEL=llama-3.1-70b-versatile
GROQ_ANSWER_MODEL=llama-3.3-70b-versatile
GROQ_FAST_MODEL=llama-3.1-8b-instant
GROQ_SEMANTIC_MODEL=llama-3.1-8b-instant

# -----------------------------------------------------------------------------
# INTERNET ARAMA AYARLARI
# -----------------------------------------------------------------------------
BING_API_KEY=
BING_ENDPOINT=https://api.bing.microsoft.com/v7.0/search
SERPER_API_KEY=
SERPER_ENDPOINT=https://google.serper.dev/search

# -----------------------------------------------------------------------------
# OLLAMA AYARLARI (Yerel LLM)
# -----------------------------------------------------------------------------
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_GEMMA_MODEL=josiefied-qwen3-8b

# -----------------------------------------------------------------------------
# GORSEL URETIM AYARLARI (Forge/Flux)
# -----------------------------------------------------------------------------
FORGE_BASE_URL=http://127.0.0.1:7860
FORGE_TXT2IMG_PATH=/sdapi/v1/txt2img
FORGE_TIMEOUT=1200
FORGE_FLUX_CHECKPOINT=fluxedUpFluxNSFW_51FP8.safetensors

# -----------------------------------------------------------------------------
# CORS AYARLARI
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
